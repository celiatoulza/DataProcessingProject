{% extends "::layout.html.twig" %}

{% block body %}

	<h3>Registration</h3>

	<div class="well">
	  {{ form_start( form, { 'attr': { 'class': 'form-horizontal' } } ) }}


	    {{ form_errors( form ) }}

	  {% if form.username is defined %}
	    {# Idem pour le champ username. #}
	    <div class="form-group">
	      {{ form_label( form.username, "Username", { 'label_attr': { 'class': 'col-sm-3 control-label' }}) }}
	      {{ form_errors( form.username ) }}
	      <div class="col-sm-4">
	        {{ form_widget( form.username, { 'attr': { 'class': 'form-control' }}) }}
	      </div>
	    </div>
	  {% endif %}


	  {% if form.email is defined %}
	    {# champ email. #}
	    <div class="form-group">
	      {{ form_label( form.email, "Email", { 'label_attr': { 'class': 'col-sm-3 control-label' }}) }}
	      {{ form_errors( form.email ) }}
	      <div class="col-sm-4">
	        {{ form_widget( form.email, { 'attr': { 'class': 'form-control' }}) }}
	      </div>
	    </div>
	  {% endif %}


	  {% if form.password is defined %}
	    {# champ password. #}
	      <div class="form-group">
	        {{ form_label( form.password, "Password", { 'label_attr': { 'class': 'col-sm-3 control-label'  }}) }}
	        {{ form_errors( form.password ) }}
	        <div class="col-sm-4">
	          {{ form_widget( form.password, { 'attr': { 'class': 'form-control' }}) }}
	        </div>
	      </div>
	  {% endif %}

	  <br/>

	  <div class="saveButton">
		  {% if form.save is defined %}
		    {{ form_widget( form.save, {'attr': {'class': 'btn btn-primary'}}) }}
		  {% endif %}
	  </div>

	  {{ form_rest(form) }}

	    
	  {{ form_end(form) }}
	</div>
	  

{% endblock %}